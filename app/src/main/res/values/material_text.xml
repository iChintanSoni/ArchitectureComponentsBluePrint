<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="primary_text_light">#DE000000</color>
    <color name="secondary_text_light">#8A000000</color>
    <color name="disabled_text_light">#61000000</color>

    <color name="primary_text_dark">#FFFFFFFF</color>
    <color name="secondary_text_dark">#46FFFFFF</color>
    <color name="disabled_text_dark">#80FFFFFF</color>

    <style name="PrimaryText">
        <item name="android:textColor">@color/primary_text_dark</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">@color/secondary_text_dark</item>
    </style>

    <style name="DisabledText">
        <item name="android:textColor">@color/disabled_text_dark</item>
    </style>

    <style name="PrimaryText.Light">
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <style name="SecondaryText.Light">
        <item name="android:textColor">@color/secondary_text_light</item>
    </style>

    <style name="DisabledText.Light">
        <item name="android:textColor">@color/disabled_text_light</item>
    </style>
</resources>